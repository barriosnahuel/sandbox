<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/custom_header_color">

    <FrameLayout
        android:layout_width="@dimen/custom_header_limit_size"
        android:layout_height="@dimen/custom_header_limit_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/custom_header_limit_color"/>

    <FrameLayout
        android:layout_width="@dimen/custom_header_limit_size"
        android:layout_height="@dimen/custom_header_limit_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/custom_header_limit_color"/>

    <FrameLayout
        android:layout_width="@dimen/custom_header_limit_size"
        android:layout_height="@dimen/custom_header_limit_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/custom_header_limit_color"/>

    <FrameLayout
        android:layout_width="@dimen/custom_header_limit_size"
        android:layout_height="@dimen/custom_header_limit_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/custom_header_limit_color"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/short_text_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp"
        android:text="@string/short_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/short_text_2"/>
</RelativeLayout>